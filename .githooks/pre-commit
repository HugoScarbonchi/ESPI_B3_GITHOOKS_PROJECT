#!/bin/sh

# Ajouter un timestamp au message de commit

timestamp=$(date)

# Récupérer le nom du fichier qui contient le message de commit actuel
commitMessageFile=$GIT_EDITOR
echo $commitMessageFile

# Récupérer le message de commit actuel
commitMessage=$(cat $commitMessageFile)

# Ajouter le timestamp au message de commit
echo "$timestamp $commitMessage" > $commitMessageFile
